<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.fragments.FragmentLogin"
    android:layoutDirection="rtl"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_register_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ali.rnp.khodemon.MyLibrary.MyTextView
            android:id="@+id/fragment_register_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="نام"
            android:textColor="@color/colorPrimary"
            app:fontCustom="iranSansBold"
            app:layout_constraintEnd_toEndOf="@+id/fragment_register_editText_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fragment_register_editText_name"
            app:layout_constraintTop_toTopOf="parent" />


        <com.ali.rnp.khodemon.MyLibrary.MyTextView
            android:id="@+id/fragment_register_txt_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="نام خانوادگی"
            android:textColor="@color/colorPrimary"
            app:fontCustom="iranSansBold"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_register_txt_name"
            app:layout_constraintEnd_toEndOf="@+id/fragment_register_editText_family"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fragment_register_editText_family"
            app:layout_constraintTop_toTopOf="@+id/fragment_register_txt_name" />

        <com.ali.rnp.khodemon.MyLibrary.MyEditText
            android:id="@+id/fragment_register_editText_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_edit_text_user_name"
            android:drawableRight="@drawable/ic_user"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:paddingLeft="32dp"
            android:paddingRight="@dimen/standard_margin_2x"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/fragment_register_editText_family"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_txt_name" />

        <com.ali.rnp.khodemon.MyLibrary.MyEditText
            android:id="@+id/fragment_register_editText_family"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/shape_edit_text_user_family"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:paddingLeft="32dp"
            android:paddingRight="@dimen/standard_margin_2x"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_register_editText_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/fragment_register_editText_name"
            app:layout_constraintTop_toTopOf="@+id/fragment_register_editText_name" />

        <com.ali.rnp.khodemon.MyLibrary.MyTextView
            android:id="@+id/fragment_register_txt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="نام کاربری"
            android:textColor="@color/colorPrimary"
            app:fontCustom="iranSansBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_editText_name" />

        <com.ali.rnp.khodemon.MyLibrary.MyEditText
            android:id="@+id/fragment_register_editText_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_edit_text_user_login_register"
            android:drawableRight="@drawable/ic_user"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:paddingLeft="32dp"
            android:paddingRight="@dimen/standard_margin_2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_txt_user" />

        <com.ali.rnp.khodemon.MyLibrary.MyTextView
            android:id="@+id/fragment_register_txt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="پسورد"
            android:textColor="@color/colorPrimary"
            app:fontCustom="iranSansBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_editText_username" />

        <com.ali.rnp.khodemon.MyLibrary.MyEditText
            android:id="@+id/fragment_register_editText_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_edit_text_user_login_register"
            android:drawableRight="@drawable/ic_padlock"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:paddingLeft="32dp"
            android:paddingRight="@dimen/standard_margin_2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_txt_password" />

        <com.ali.rnp.khodemon.MyLibrary.MyButton
            android:id="@+id/fragment_register_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_button_oval_primary"
            android:drawableRight="@drawable/ic_next"
            android:foreground="@drawable/ripple_white"
            android:paddingLeft="32dp"
            android:paddingRight="@dimen/standard_margin_2x"
            android:text="ثبت نام"
            android:textColor="@color/white"
            android:textSize="@dimen/large_textSize_dp"
            app:fontCustom="shp_iranSansMobile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_editText_password" />

        <com.ali.rnp.khodemon.MyLibrary.MyTextView
            android:id="@+id/fragment_register_txt_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="visible"
            android:layout_marginBottom="24dp"
            android:text="حساب کاربری ندارید ؟"
            app:fontCustom="shp_iranSansMobile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_button" />

        <com.ali.rnp.khodemon.MyLibrary.MyTextView
            android:id="@+id/fragment_register_txt_questionLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ایجاد حساب کاربری"
            android:textColor="@color/dark_gray"
            app:fontCustom="shp_iranSansMobile"
            android:layout_marginRight="@dimen/standard_margin_2x"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_register_txt_question"
            app:layout_constraintRight_toLeftOf="@+id/fragment_register_txt_question"
            app:layout_constraintTop_toTopOf="@+id/fragment_register_txt_question" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>