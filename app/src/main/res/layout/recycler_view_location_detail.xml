<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/recycler_view_location_detail_iconIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_location_detail_subjectTV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recycler_view_location_detail_subjectTV"
        tools:srcCompat="@drawable/ic_phone" />

    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/recycler_view_location_detail_subjectTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recycler_view_location_detail_iconIV"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="موضوع" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:rotation="90"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_location_detail_subjectTV"
        app:layout_constraintRight_toLeftOf="@+id/recycler_view_location_detail_subjectTV"
        app:layout_constraintTop_toTopOf="@+id/recycler_view_location_detail_subjectTV"
        app:srcCompat="@drawable/ic_arrow_down" />

    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/recycler_view_location_detail_variableTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. " />

    <ImageView
        android:id="@+id/recycler_view_location_detail_iconDescriptionIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_location_detail_iconIV"
        app:layout_constraintEnd_toStartOf="@+id/imageView12"
        app:layout_constraintRight_toLeftOf="@+id/recycler_view_location_detail_variableTV"
        app:layout_constraintTop_toTopOf="@+id/recycler_view_location_detail_iconIV"
        app:srcCompat="@drawable/ic_phone" />


</androidx.constraintlayout.widget.ConstraintLayout>