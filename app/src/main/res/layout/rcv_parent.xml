<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/rcv_parent_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:textSize="@dimen/small_textSize_sp"
        tools:text="مخاطب"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginRight="8dp"
        android:background="@color/gray_300"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_parent_title_tv"
        app:layout_constraintRight_toLeftOf="@+id/rcv_parent_title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rcv_parent_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>