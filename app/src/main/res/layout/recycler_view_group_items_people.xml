<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    tools:targetApi="jelly_bean_mr1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="8dp"

        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/recycler_view_group_items_people_image_imageView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/holder_banner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ali.rnp.khodemon.MyLibrary.MyTextView
                android:id="@+id/recycler_view_group_items_people_name_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                tools:text="علی مقدم"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black"
                app:fontCustom="shp_iranSansMobile"

                app:layout_constraintLeft_toRightOf="@id/guideline3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ali.rnp.khodemon.MyLibrary.MyTextView
                android:id="@+id/recycler_view_group_items_people_city_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_search_home_edit_text"
                app:layout_constraintBottom_toBottomOf="@+id/recycler_view_group_items_people_name_textView"
                app:layout_constraintLeft_toRightOf="@+id/recycler_view_group_items_people_image_imageView"
                app:layout_constraintRight_toLeftOf="@id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/recycler_view_group_items_people_name_textView"
                tools:text="ماهشهر" />

            <com.ali.rnp.khodemon.MyLibrary.MyTextView
                android:id="@+id/recycler_view_group_items_people_tag_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                app:fontCustom="shp_iranSansMobile"
                app:layout_constraintLeft_toRightOf="@id/recycler_view_group_items_people_image_imageView"
                android:gravity="right"
                android:layout_marginLeft="@dimen/standard_margin"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintRight_toLeftOf="@id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                tools:text="متخصص پوست و مو" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="216dp"
                android:layout_marginLeft="216dp"
                android:orientation="vertical"
                app:layout_constraintGuide_end="225dp"
                app:layout_constraintStart_toStartOf="parent" />

            <com.ali.rnp.khodemon.MyLibrary.MyTextView
                android:id="@+id/recycler_view_group_items_people_work_experience_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                tools:text="3 سال تجربه"
                android:textSize="11sp"
                android:textColor="@color/gray_600"
                app:fontCustom="shp_iranSansMobileLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@+id/imageView3" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="12dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_group_items_people_name_textView"
                app:srcCompat="@drawable/ic_user" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="24dp"

                android:layout_marginRight="12dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:srcCompat="@drawable/ic_tyre_expert" />

            <com.ali.rnp.khodemon.MyLibrary.MyTextView
                android:id="@+id/recycler_view_group_items_people_experts_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="برنامه نویس اندروید "
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="right"
                app:fontCustom="shp_iranSansMobile"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/standard_margin"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintRight_toRightOf="@id/recycler_view_group_items_people_tag_textView"
                app:layout_constraintLeft_toRightOf="@id/recycler_view_group_items_people_image_imageView"

                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <com.ali.rnp.khodemon.MyLibrary.MyTextView
                android:id="@+id/myTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 امتیاز"
                app:layout_constraintLeft_toLeftOf="@+id/recycler_view_group_items_people_image_imageView"
                app:layout_constraintRight_toRightOf="@+id/recycler_view_group_items_people_image_imageView"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_group_items_people_image_imageView"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>