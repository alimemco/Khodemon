<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@drawable/ripple_primary"
    tools:ignore="RtlHardcoded">

    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/item_rec_view_adapter_city_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="@dimen/standard_margin_2x"
        tools:text="TextView"
        app:fontCustom="iranSans"
        android:textSize="@dimen/large_textSize_sp"/>

    <View
        android:id="@+id/item_rec_view_adapter_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginLeft="@dimen/standard_margin"
        android:background="@color/gray_300"/>
</LinearLayout>