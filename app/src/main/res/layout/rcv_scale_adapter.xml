<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:stretchColumns="*"
    tools:targetApi="jelly_bean_mr1">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ali.rnp.khodemon.MyLibrary.MyTextView
            android:id="@+id/rcv_scale_adapter_title"
            android:layout_span="1"
            android:background="@color/gray_300"
            android:gravity="center"
            android:padding="4dp"
            android:text=" قیمت" />

        <com.ali.rnp.khodemon.MyLibrary.MyTextView
            android:id="@+id/rcv_scale_adapter_decOne"
            android:layout_span="5"
            android:background="@color/gray_200"
            android:gravity="center"
            android:padding="4dp"
            android:text="5000 تومان" />

        <com.ali.rnp.khodemon.MyLibrary.MyTextView
            android:id="@+id/rcv_scale_adapter_decTwo"
            android:layout_span="5"
            android:background="@color/gray_200"
            android:gravity="center"
            android:padding="4dp"
            android:text="2400 تومان" />

    </TableRow>


</TableLayout>
