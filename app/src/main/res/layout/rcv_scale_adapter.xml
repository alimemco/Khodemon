<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
android:paddingBottom="5dp"
    android:orientation="horizontal"
    tools:targetApi="jelly_bean_mr1">



    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/rcv_scale_adapter_decOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gray_200"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="reg" />

    <ImageView
        android:id="@+id/rcv_scale_adapter_decOneImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_scale_adapter_decOne"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rcv_scale_adapter_decOne"
        app:layout_constraintVertical_bias="1.0" />



    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/rcv_scale_adapter_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:background="@color/gray_100"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_10"
        android:paddingTop="4dp"
        android:paddingRight="@dimen/padding_10"

        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="قیمت متن طقب قلقل قل" />




    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/rcv_scale_adapter_decTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gray_200"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="efe" />


    <ImageView
        android:id="@+id/rcv_scale_adapter_decTwoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_scale_adapter_decTwo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintTop_toTopOf="@+id/rcv_scale_adapter_decTwo" />



</androidx.constraintlayout.widget.ConstraintLayout>
