<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"

    android:orientation="horizontal"
    tools:targetApi="jelly_bean_mr1">


    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/rcv_scale_adapter_decOne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_200"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintLeft_toRightOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rcv_scale_adapter_title"
        tools:text="5000 تومان" />

    <ImageView
        android:id="@+id/rcv_scale_adapter_decOneImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="4dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintLeft_toRightOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rcv_scale_adapter_title" />

    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/rcv_scale_adapter_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/gray_100"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_10"
        android:paddingTop="4dp"
        android:paddingRight="@dimen/padding_10"
        android:paddingBottom="2dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small_textSize_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=" قیمت" />

    <com.ali.rnp.khodemon.MyLibrary.MyTextView
        android:id="@+id/rcv_scale_adapter_decTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_200"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintTop_toTopOf="@+id/rcv_scale_adapter_title"
        tools:text="2400 تومان" />

    <ImageView
        android:id="@+id/rcv_scale_adapter_decTwoImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rcv_scale_adapter_title"
        app:layout_constraintTop_toTopOf="@+id/rcv_scale_adapter_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
